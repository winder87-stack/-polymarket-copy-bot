# Polymarket Copy Bot Environment Variables
# Copy this file to .env and fill in your values
# WARNING: Never commit .env file to version control!

# =============================================
# REQUIRED SETTINGS
# =============================================

# Your Polygon wallet private key (0x...)
# Get this from your wallet (NEVER share this!)
PRIVATE_KEY=

# Polygon RPC endpoint for blockchain interaction
POLYGON_RPC_URL=https://polygon-rpc.com

# =============================================
# OPTIONAL SETTINGS
# =============================================

# PolygonScan API key for enhanced transaction monitoring
# Get from: https://polygonscan.com/apis
POLYGONSCAN_API_KEY=

# Telegram notifications (highly recommended for production)
# Create bot: message @BotFather on Telegram
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Polymarket CLOB API endpoint
# Use testnet for testing: https://clob.polymarket.com
CLOB_HOST=https://clob.polymarket.com

# =============================================
# RISK MANAGEMENT (CAUTION!)
# =============================================

# Maximum position size in USDC per trade
MAX_POSITION_SIZE=50.0

# Daily loss limit (circuit breaker) in USDC
MAX_DAILY_LOSS=100.0

# Minimum trade amount to copy (ignore smaller trades)
MIN_TRADE_AMOUNT=1.0

# Stop loss percentage (0.15 = 15%)
STOP_LOSS_PERCENTAGE=0.15

# Take profit percentage (0.25 = 25%)
TAKE_PROFIT_PERCENTAGE=0.25

# Maximum slippage allowed (0.02 = 2%)
MAX_SLIPPAGE=0.02

# =============================================
# TRADING PARAMETERS
# =============================================

# Maximum gas price in gwei
MAX_GAS_PRICE=100

# Default gas limit for transactions
DEFAULT_GAS_LIMIT=300000

# =============================================
# MONITORING & PERFORMANCE
# =============================================

# How often to check wallets (seconds)
MONITOR_INTERVAL=15

# Minimum confidence score for trade detection (0.1-0.95)
MIN_CONFIDENCE_SCORE=0.7

# =============================================
# LOGGING & DEBUGGING
# =============================================

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/polymarket_bot.log

# =============================================
# DEVELOPMENT FLAGS
# =============================================

# Enable test mode (smaller positions, more logging)
# TEST_MODE=false

# Enable fast mode (skip some health checks)
# FAST_MODE=false

# =============================================
# ADVANCED SETTINGS
# =============================================

# Maximum concurrent positions
MAX_CONCURRENT_POSITIONS=10

# Gas price multiplier for priority (1.0-2.0)
GAS_PRICE_MULTIPLIER=1.1

# Alert settings
ALERT_ON_TRADE=true
ALERT_ON_ERROR=true
ALERT_ON_CIRCUIT_BREAKER=true

# =============================================
# SECURITY NOTES
# =============================================
# - PRIVATE_KEY is extremely sensitive - never log it or share it
# - Start with small MAX_POSITION_SIZE and MAX_DAILY_LOSS
# - Test on Polygon Mumbai testnet first
# - Monitor gas prices - high gas can drain your wallet quickly
# - Keep backups of your configuration
