[MASTER]
ignore=venv,.git,logs,data,tests
load-plugins=pylint.extensions.docparams, pylint.extensions.mccabe

[MESSAGES CONTROL]
disable=
    # Allow reasonable line lengths
    line-too-long,
    # Allow missing docstrings for test functions
    missing-function-docstring,
    # Allow protected member access when necessary
    protected-access,
    # Allow broad except clauses in specific contexts
    broad-except,
    # Allow missing module docstrings for __init__.py
    missing-module-docstring,
    # Allow too-many-arguments for complex functions
    too-many-arguments,
    # Allow too-many-locals for complex algorithms
    too-many-locals,
    # Allow too-many-statements for complex functions
    too-many-statements,
    # Allow unused-arguments for callback signatures
    unused-argument

[DESIGN]
max-statements=50
max-args=10
max-locals=15
max-returns=6
max-branches=12
max-nested-blocks=5
max-parents=7
max-attributes=15
min-public-methods=2
max-public-methods=20

[FORMAT]
max-line-length=100
indent-string='    '
good-names=i,j,k,ex,Run,_

[VARIABLES]
init-import=no
dummy-variables-rgx=_+$|dummy
additional-builtins=frozenset

[BASIC]
# Basic naming and style checks
