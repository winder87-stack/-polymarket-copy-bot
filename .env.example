# CRITICAL: Never commit this file to version control!
# Copy to .env and fill in your values

# Trading Wallet Configuration (KEEP SECURE)
PRIVATE_KEY=your_private_key_here  # 0x prefix required
WALLET_ADDRESS=your_wallet_address_here  # Leave empty to auto-calculate

# Polymarket API Configuration
CLOB_HOST=https://clob.polymarket.com  # Use https://clob.polymarket.com for testnet
CHAIN_ID=137  # Polygon mainnet (80002 for Amoy testnet)

# RPC Endpoints
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGONSCAN_API_KEY=your_polygonscan_api_key  # Get from polygonscan.com

# Trading Parameters
MAX_SLIPPAGE=0.02  # 2% maximum slippage
MAX_POSITION_SIZE=50.0  # Maximum USDC per position
MAX_DAILY_LOSS=100.0  # Circuit breaker threshold
MIN_TRADE_AMOUNT=1.0  # Ignore trades smaller than this

# Monitoring Configuration
MONITOR_INTERVAL=15  # Seconds between wallet checks
MAX_GAS_PRICE=100  # gwei - stop trading if gas exceeds this
DEFAULT_GAS_LIMIT=300000
MIN_CONFIDENCE_SCORE=0.7  # Minimum confidence score for trade detection

# Risk Management
MAX_CONCURRENT_POSITIONS=10
STOP_LOSS_PERCENTAGE=0.15  # 15% stop loss
TAKE_PROFIT_PERCENTAGE=0.25  # 25% take profit
GAS_PRICE_MULTIPLIER=1.1  # Gas price multiplier for priority

# Telegram Alerts (Optional)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/polymarket_bot.log

# Advanced Settings
ENVIRONMENT=production
