[flake8]
max-line-length = 120
extend-ignore = E203, W503, E501, E402, F401, F841
exclude =
    .git,
    __pycache__,
    build,
    dist,
    venv,
    .venv,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    .tox,
    .coverage,
    htmlcov,
    logs,
    data,
    .env,
    .env.*,
    node_modules
per-file-ignores =
    __init__.py:F401
    tests/*:S101,S104
    scripts/*:T201,T203
max-complexity = 12
count = true
show-source = true
statistics = true
